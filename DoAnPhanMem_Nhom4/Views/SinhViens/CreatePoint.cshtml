@model DoAnPhanMem_Nhom4.Models.SinhVien

@{
    ViewData["Title"] = "Details";
}

<h1>Thông tin chi tiết</h1>

<div>
    
    <h4>Sinh viên</h4>
    <hr />
    <form asp-action="CreatePoint">
        <div class="form-row"> 
            <input name="idSV" class="form-control" type="hidden" value="@Html.DisplayFor(model => model.IdSv)">
 
            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2" style="margin-top: 10px;">
                <select name="idHocKy" class="form-control" asp-items="ViewBag.IdHocKy"></select>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2" style="margin-top: 10px;">
                <button type="submit" class="btn btn-space btn-primary">Submit</button>
            </div>
        </div>

    </form>
    <dl class="row">
        <dt class="col-sm-2">
            Mã sinh viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdSv)
        </dd>
        <dt class="col-sm-2">
            Tên sinh viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenSv)
        </dd>
        <dt class="col-sm-2">
            Tên đăng nhập
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenDangNhap)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BanCanSu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BanCanSu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdLopNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdLopNavigation.IdLop)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdSv">Cập nhật</a> |
    <a asp-action="Response" asp-route-id="@Model?.IdSv">Xem chi tiết điểm rèn luyện</a> |
    <a asp-action="Index">Quay lại</a>
</div>

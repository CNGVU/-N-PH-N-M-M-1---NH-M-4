@model DoAnPhanMem_Nhom4.Models.SinhVien

@{
    ViewData["Title"] = "Details";
}


<!-- Content Start -->
<div class="content">
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
        <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
            <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
        </a>
        <a href="#" class="sidebar-toggler flex-shrink-0">
            <i class="fa fa-bars"></i>
        </a>

        <div class="navbar-nav align-items-center ms-auto">
            <div class="nav-item dropdown">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        <img class="rounded-circle me-lg-2" src="~/assets/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                        <span class="d-none d-lg-inline-flex">@User.Identity.Name</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                        <a href="#" class="dropdown-item">My Profile</a>
                        <a asp-controller="Login" asp-action="LogOut" class="dropdown-item">Log Out</a>
                    </div>
                }
                else
                {
                    <a href="/Login/Index" class="nav-link">
                        <span class="d-none d-lg-inline-flex">Login</span>
                    </a>
                }
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    <!-- Table Start -->
    <div class="container pt-4">
        <div class="row">
            <div class="col-12">
                <div class="bg-light rounded h-100 p-4">
                    <h3 style="text-align: center;" class="mb-4">Sinh viên</h3>
                    <div>
                        <h4>Thông tin cá nhân</h4>
                        <hr />
                        
                        @if (ViewBag.TrueOrFalse == "true")
                        {
                            <form asp-action="CreatePoint" class="d-none d-md-flex ms-4">
                                <input name="idSV" class="form-control" type="hidden" value="@Html.DisplayFor(model => model.IdSv)">
                                <div class="col-sm-3">
                                    <div class="bg-light rounded h-100 p-4">
                                        <h6 style="line-height: 2.5;" class="mb-4">Tạo phiếu đánh giá</h6>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="bg-light rounded h-100 p-4">
                                        <select name="idHocKy" class="form-control" asp-items="ViewBag.IdHocKy"></select>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="bg-light rounded h-100 p-4">
                                        <button type="submit" class="btn btn-space btn-primary">Ok</button>
                                    </div>
                                </div>
                            </form>
                            <h3>@ViewBag.Mess</h3>
                        }
                        else
                        {
                            <h3>@ViewBag.Mess</h3>
                        }
                        <div class="d-none d-md-flex ms-4">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Mã sinh viên
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IdSv)
                                </dd>
                                <dt class="col-sm-2">
                                    Tên sinh viên
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TenSv)
                                </dd>
                                <dt class="col-sm-2">
                                    Tên đăng nhập
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TenDangNhap)
                                </dd>

                                <dt class="col-sm-2">
                                    Ban cán sự
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.BanCanSu)
                                </dd>
                                <dt class="col-sm-2">
                                    Lớp
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IdLopNavigation.TenLop)
                                </dd>
                                <dd class="col-sm-10">
                                    <a class="btn btn-outline-secondary" asp-action="Response" asp-route-id="@Model?.IdSv">Xem chi tiết điểm rèn luyện</a> |
                                    <a asp-action="Index">Quay lại</a>
                                </dd>

                            </dl>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <!-- Table End -->


</div>
<!-- Content End -->
